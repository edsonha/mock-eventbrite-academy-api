{
  "name": "stashaway-api",
  "jest": {
    "preset": "@shelf/jest-mongodb",
    "setupFilesAfterEnv": [
      "./testSetup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 82,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "version": "1.0.0",
  "description": "Backend POC for Stashaway academy",
  "main": "server.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watchAll ",
    "start": "node src/server.js",
    "start:dev": "nodemon src/server.js",
    "coverage": "jest --runInBand --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mystashaway/stashaway-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mystashaway/stashaway-api/issues"
  },
  "homepage": "https://github.com/Mystashaway/stashaway-api#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.6.4",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
